<%- include('../../common/include/header.ejs') %>
<body id="review">

<link async="" rel="stylesheet" href="/public/css/common_css/review.css">
<link rel="stylesheet" href="/public/css/common_css/main.css">
<div class="container">
    <section class="section_01">
        <img class="mobile_back" id="targetImage" src="/public/img/mobile/review/mobile_review_sec01.png" style="width: 100%;"/>
        <img class="mobile_back m1560px" src="/public/img/web/notice/notice_sec_1580.png" style="width: 100%;"/>
        <img class="mobile_back m1300px" src="/public/img/web/notice/notice_sec_1300.png" style="width: 100%;"/>
        <img class="mobile_back m800px" id="targetImage" src="/public/img/mobile/notice/mobile_notice_sec01.png" style="width: 100%;"/>
        <img class="mobile_back m500px" id="targetImage" src="/public/img/mobile/notice/mobile_notice_sec01.png" style="width: 100%;"/>
        <div class="bg_video_text">
            <div class="video_text_wrap">
                <div class="word_content">
                    <div class="content">
                        <div class="here_content">
                            <h1 class="animate_video_txt">
                            <span id="main_span" style="transition: 0.5s ease-in-out; position: relative; top: 230px;">
                            <span class="animate_wrapper">
                            <span style="font-family: 'Jost*', sans-serif;" class="word01">500년</span>
                            <span></span>
                            </span>
                            <span class="animate_wrapper">
                            <span style="font-family: 'Jost*', sans-serif;" class="word02">전통의 우리 맛</span>
                            <span></span>
                            </span>
                            <br>
                            <span class="animate_txt">
                            <span class="animate_wrapper">
                            <span style="font-family: 'Jost*', sans-serif;" class="word03">안동</span>
                            <span></span>
                            </span>
                            <span class="animate_wrapper">
                            <span style="font-family: 'Jost*', sans-serif;" class="word04">한우불고기</span>
                            <span></span>
                            </span>
                            </span>
                            </span>
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script>
            window.onload = function() {
                changeImageSrcBasedOnWidth();
            }

            window.addEventListener('resize', changeImageSrcBasedOnWidth);

            function changeImageSrcBasedOnWidth() {
                const imgElement = document.getElementById('targetImage');
                if (window.innerWidth <= 500 && imgElement.src !== '/public/img/mobile/review/mobile_review_sec01.png') {
                    imgElement.src = '/public/img/mobile/review/mobile_review_sec01.png';  // 원하는 새로운 이미지 경로로 변경하세요.
                } else if (window.innerWidth > 500 && imgElement.src !== '/public/img/mobile_review_800.png') {
                    imgElement.src = '/public/img/mobile_review_800.png';
                }
            }
        </script>
    </section>
    <!--섹션1-->

    <section class="section_main_btm review_1">
        <span class="gallery_top_span">RECENT REVIEWS</span>

        <div class="main_card_notice">
            <% for(let i = 0; i < Math.min(3, lists.length); i++) { %>
                <div class="card_notice cn_<%= i+1 %>" data-link="/detail?table=review&idx=<%= lists[i].idx %>"
                     data-idx="<%= lists[i].idx %>"
                     data-title="<%= lists[i].title %>">
                    <div class="card_notice_top">
                        <span><%= lists[i].title %></span>
                    </div>
                    <img src="<%= lists[i].thumbnail %>" alt="<%= lists[i].title %>"/>
                </div>
            <% } %>
        </div>

        <div class="main_card_notice">
            <% for(let i = 3; i < Math.min(6, lists.length); i++) { %>
                <div class="card_notice cn_<%= i+1 %>" data-link="/detail?table=review&idx=<%= lists[i].idx %>"
                     data-idx="<%= lists[i].idx %>"
                     data-title="<%= lists[i].title %>">
                    <div class="card_notice_top">
                        <span><%= lists[i].title %></span>
                    </div>
                    <img src="<%= lists[i].thumbnail %>" alt="<%= lists[i].title %>"/>
                </div>
            <% } %>
        </div>

        <div class="main_card_notice">
            <% for(let i = 6; i < Math.min(9, lists.length); i++) { %>
                <div class="card_notice cn_<%= i+1 %>" data-link="/detail?table=review&idx=<%= lists[i].idx %>"
                     data-idx="<%= lists[i].idx %>"
                     data-title="<%= lists[i].title %>">
                    <div class="card_notice_top">
                        <span><%= lists[i].title %></span>
                    </div>
                    <img src="<%= lists[i].thumbnail %>" alt="<%= lists[i].title %>"/>
                </div>
            <% } %>
        </div>
    </section>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('[data-link]').forEach(item => {
                item.addEventListener('click', function() {
                    window.location.href = this.dataset.link;
                });
            });
        });
    </script>
</div>
</body>
<%- include('../../common/include/footer.ejs') %>